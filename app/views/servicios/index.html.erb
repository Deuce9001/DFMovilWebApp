<table>
  <thead>
    <tr>
      <th>Parada</th>
      <th>Ruta</th>
      <th>Organismo</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.parada %></td>
        <td><%= servicio.ruta %></td>
        <td><%= servicio.organismo %></td>
        <td><%= servicio.latitud %></td>
        <td><%= servicio.longitud %></td>
        <td><%= link_to 'Show', servicio %></td>
        <td><%= link_to 'Edit', edit_servicio_path(servicio) %></td>
        <td><%= link_to 'Destroy', servicio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


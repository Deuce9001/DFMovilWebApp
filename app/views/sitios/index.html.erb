<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1>Sitios de Taxis</h1>

<table>
  <thead>
    <tr>
      <th>Nombrebase</th>
      <th>Nombretitular</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sitios.each do |sitio| %>
      <tr>
        <td><%= sitio.NombreBase %></td>
        <td><%= sitio.NombreTitular %></td>
        <td><%= sitio.latitude %></td>
        <td><%= sitio.longitude %></td>
        <td><%= link_to 'Show', sitio %></td>
        <td><%= link_to 'Edit', edit_sitio_path(sitio) %></td>
        <td><%= link_to 'Destroy', sitio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sitio', new_sitio_path, class:'button' %>


<div style='width: 800px;'>
  <div id="multi_markers" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
  var markers = handler.addMarkers([
    { lat: 19.289683, lng: -99.1448033},
    { lat: 19.3563827, lng: -99.1685538},
    
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>